contract TimeToPay(
    pubkey owner,
    bytes32 visible key,
    int visible unused value,
) {
    /**
     * Collect Payment
     *
     * TBD..
     *
     * @param authorized
     * @param signature
     */
    function collect(pubkey authorized, sig signature) {
        /* Set dust value. */
        int DUST_VALUE = 546;

        /* Verify parameter. */
        require(param >= DUST_VALUE);

        /* Verify transaction is signed by the owner. */
        require(checkSig(signature, owner));
    }

    /**
     * Refund Payment
     *
     * TBD..
     *
     * @param authorized
     * @param signature
     */
    function refund(pubkey authorized, sig signature) {
        /* Set dust value. */
        int DUST_VALUE = 546;

        /* Verify parameter. */
        require(param >= DUST_VALUE);

        /* Verify transaction is signed by the owner. */
        require(checkSig(signature, owner));
    }
}
